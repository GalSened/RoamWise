# =============================================================================
# RoamWise PWA - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
VITE_APP_VERSION=2.0.0

# -----------------------------------------------------------------------------
# OpenAI API (Required for AI Travel Co-Pilot)
# Get your key at: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# Google Maps API (Required for map features)
# Get your key at: https://console.cloud.google.com/apis/credentials
# Enable: Maps JavaScript API, Places API, Directions API
# -----------------------------------------------------------------------------
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_GOOGLE_PLACES_ENABLED=true
VITE_GOOGLE_ROUTES_ENABLED=true
VITE_GOOGLE_ELEVATION_ENABLED=true

# -----------------------------------------------------------------------------
# OpenWeather API (Required for weather features)
# Get your free key at: https://openweathermap.org/api
# -----------------------------------------------------------------------------
VITE_OPENWEATHER_API_KEY=your-openweather-api-key-here
VITE_WEATHER_PROVIDER=openweather

# -----------------------------------------------------------------------------
# Groq API (Optional - alternative AI provider)
# Get your key at: https://console.groq.com/keys
# -----------------------------------------------------------------------------
VITE_GROQ_API_KEY=

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=https://roamwise-proxy-971999716773.us-central1.run.app
VITE_PROXY_URL=https://roamwise-proxy-971999716773.us-central1.run.app

# -----------------------------------------------------------------------------
# Routing Configuration
# Options: 'google' (requires Google Maps API) or 'osrm' (free)
# -----------------------------------------------------------------------------
VITE_ROUTING_PROVIDER=google
VITE_ROUTING_BASE_URL=

# -----------------------------------------------------------------------------
# Map Styles
# -----------------------------------------------------------------------------
VITE_MAP_STYLE_LIGHT=maplibre-light
VITE_MAP_STYLE_DARK=maplibre-dark

# -----------------------------------------------------------------------------
# Telemetry (Optional)
# Set to 'true' to enable anonymous usage analytics
# -----------------------------------------------------------------------------
VITE_TELEMETRY_ENABLED=false
VITE_TELEMETRY_ENDPOINT=/api/telemetry
